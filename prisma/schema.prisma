generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
}

// Category
model Category {
  id          String   @id @default(uuid())
  name        String
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // 1 Category - N Posts
  posts Post[]

  @@map("categories")
}

// Post (News)
model Post {
  id           String  @id @default(uuid())
  title        String
  slug         String  @unique
  summary      String?
  content      String
  thumbnailUrl String?

  status      PostStatus @default(DRAFT)
  publishedAt DateTime?

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])

  // AuthorId (từ User Service - không FK)
  authorId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("posts")
}

enum PostStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}
